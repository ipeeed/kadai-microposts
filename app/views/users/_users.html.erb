<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
    <li class="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""> <!-- gravatar_urlメソッドはまだ定義していない。というか_urlってメソッドだったのか -->
                                                                                      <!-- gravatarとはメールアドレスに対してアバター画像登録するサービス。
                                                                                      gravatorに対応したサイトでそのアドレスを設定すると表示される。 -->
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'View profile', user_path(user) %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
  
  <%= paginate users %>
<% end %>